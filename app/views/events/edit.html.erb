 <%= form_for @event do |f|  %>
    <!-- form_tag url_for(action:'create'), method: "post" do  -->
   
      <%= label_tag 'Titre' %>
      <%= f.text_area :title, class:'form-control' %>
      <br /> <br />

      <%= label_tag 'Contenu' %>
      <%= f.text_area :description, class:'form-control' %>
      <br /> <br />

       <%= label_tag 'Durée' %>
      <%= f.text_area :duration, class:'form-control' %>
      <br /> <br />

      <%= label_tag 'Lieu' %>
      <%= f.text_area :location, class:'form-control' %>
      <br /> <br />

      <%= label_tag 'Prix' %>
      <%= f.text_area :price, class:'form-control' %>
      <br /> <br />

      <%= label_tag 'Date' %>
      <%= f.text_area :start_date, class:'form-control' %>
      <br /> <br />




      <%= submit_tag "Editer l'évenement" %>

    <% end %>

    <% if flash[:notice] %>
    <div class="alert alert-dismissible alert-danger">
      <div class="notice"><strong><%= flash[:notice] %></strong></div>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    <% end %>